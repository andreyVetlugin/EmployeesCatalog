<EditForm Model="@prof" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Полное имя:</label>
        <div>
            <InputText @bind-Value="@prof.FullName" />
            <ValidationMessage For="@(() => prof.FullName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Почта:</label>
            <div>
                <InputText @bind-Value="@prof.Email" />
                <ValidationMessage For="@(() =>prof.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Дата рождения:</label>
            <div>
                <InputDate @bind-Value="@prof.Birthdate" />
                <ValidationMessage For="@(() => prof.Birthdate)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Номер телефона:</label>
            <div>
                <InputText @bind-Value="@prof.PhoneNumber" />
                <ValidationMessage For="@(() => prof.PhoneNumber)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code {
    [Parameter] public ProfileFullView prof{ get; set; }
    [Parameter] public string ButtonText { get; set; } = "Сохранить";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}